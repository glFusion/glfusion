  <a class="uk-thumbnail" href="{hrefdirect}" data-uk-lightbox="{group:'album'}" {!if iframe} data-lightbox-type="iframe" {!endif} title="{caption_text}">
{!else}
  {!if hrefdirect_popup}
    <a class="uk-thumbnail" href="{hrefdirect_popup}">
  {!else}
	  <a class="uk-thumbnail" href="{href}" data-uk-lightbox="{group:'album'}">
  {!endif}
{!endif}
{# end {templatelocation} #}
