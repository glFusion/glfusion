<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Strict//EN">
<html dir="{direction}">
<head>
<meta http-equiv="content-type" content="text/html; charset={charset}">
<title>{postcard_subject}</title>
</head>
<body>
<br>
<p style="text-align:center;"><a href="{site_url}getcard.php?id={pc_id}"><span style="font-weight:bold;">{lang_unable_view}</span></a></p>
<table border="0" cellspacing="0" cellpadding="1" align="center" bgcolor="#eaeaea">
  <tr>
    <td>
      <table border="0" cellspacing="0" cellpadding="3" width="100%">
        <tr>
          <td style="text-align:left;" colspan="2">
              <div style="font-family: arial,'lucida console',sans-serif;font-size:large;color:green">
              {lang_postcard_from} {site_name}
              </div>
          </td>
          <td style="text-align:right;vertical-align:top;" rowspan="4">
            <div style="text-align:right;"><a href="http://www.gllabs.org"><img src="cid:stamp" border="0" alt=""></a></div>
          </td>
        </tr>
        <tr>
          <td>
            <div style="font-family: arial,'lucida console',sans-serif;font-size:small;">
            <span style="font-weight:bold;">{lang_to}</span>
            </div>
          </td>
          <td>
            {to_name}
          </td>
        </tr>
        <tr>
          <td>
           <div style="font-family: arial,'lucida console',sans-serif;font-size:small;">
            <span style="font-weight:bold;">{lang_from}</span>
            </div>
          </td>
          <td>
            {from_name} (<a href="mailto:{from_email}">{from_email}</a>)
          </td>
        </tr>
        <tr>
          <td>
          <div style="font-family: arial,'lucida console',sans-serif;font-size:small;">
            <span style="font-weight:bold;">{lang_subject}</span>
          </div>
          </td>
          <td>
            {postcard_subject}
          </td>
        </tr>
      </table>
      <hr style="width:100%;">
        <span style="text-align:center;">
           <a href="{media_url}">
             <img src="cid:pc-image" border="1" alt="{alt_media_title}">
           </a>
           <br>
           <div style="width: 500px;text-align:center;font-style:italic;font-size:smaller;text-indent:0;">
             {media_title}
           </div>
        </span>
      <hr style="width:100%;">
        <span style="font-family: arial,'lucida console',sans-serif;font-size:small;">
          {postcard_message}
        </span>
      <hr style="width:100%;">
     <p style="text-align:center;">
      <a href="{site_url}"><span style="font-weight:bold;">{lang_visit} {site_name} - {site_slogan}</span></a>
     </p>
  </td>
</tr>
<tr>
  <td>&nbsp;</td>
</tr>
</table>
</body>
</html>
{# end {templatelocation} #}
