								<li><a href="{site_url}/pm/index.php?folder=sent">{$LANG_PM00[sent]}</a></li>
								<li><a href="{site_url}/pm/index.php?folder=outbox">{$LANG_PM00[outbox]}</a></li>
{!endif}
