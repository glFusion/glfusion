            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td class="pluginCellTitle alignleft">{LANG_ranksettings}</td>
               </tr>
            </table>
            <table width="100%" border="0" cellspacing="1" cellpadding="3" class="pluginSolidOutline">
                {ranking_options}
            </table>
            <br />
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td style="padding:10px;text-align:right;"><input type="hidden" name="savesettings" value="yes" /><input style="padding:3px;" type="submit" name="submit" value="{LANG_savesettings}" /></td>
                </tr>
            </table>
        </form>
     </td>
   </tr>
</table>
