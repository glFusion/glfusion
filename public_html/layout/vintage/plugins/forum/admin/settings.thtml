{# begin {templatelocation} #}
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td>
            <form action="{phpself}" method="post">

            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td class="pluginCellTitle alignleft">{LANG_gensettings}</td>
                            </tr>
                        </table>
            <table width="100%" border="0" cellspacing="1" cellpadding="3" class="pluginSolidOutline">
                    {group1_options}
            </table>
            <br />
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td class="pluginCellTitle alignleft">{LANG_topicsettings}</td>
                </tr>
            </table>
            <table width="100%" border="0" cellspacing="1" cellpadding="3" class="pluginSolidOutline">
                    {group2_options}
            </table>
            <br />
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td class="pluginCellTitle alignleft">{LANG_cbsettings}</td>
                </tr>
            </table>
            <table width="100%" border="0" cellspacing="1" cellpadding="3" class="pluginSolidOutline">
                    {group3_options}
                <tr>
                    <td class="pluginCellSubTitle" width="160">{LANG_cbposition}</td>
                    <td class="pluginCellText pluginCellFill">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td style="padding-right:15px;">{LANG_cbpositiondscp}</td>
                                <td style="text-align:right;">{pos_selection}</td>
